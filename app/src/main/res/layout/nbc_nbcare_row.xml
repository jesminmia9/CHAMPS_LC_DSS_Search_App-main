<?xml version = "1.0" encoding = "utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/secListRow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:padding="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:text="Sl. No"
                        android:layout_marginBottom="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center" />
                    <TextView
                        android:id="@+id/PGN"
                        android:text="02" android:textStyle="bold"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center" />
                </LinearLayout>
                <LinearLayout
                    android:padding="8dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:text="NBID"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/NBID"/>
                    <TextView
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/OutcomeType"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_next"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="5dp"
                    app:srcCompat="@drawable/ic_action_next_item"
                    app:tint="@color/colorPrimaryLight" />


            </LinearLayout>
            <LinearLayout
                android:id="@+id/secModules"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5sp"
                android:layout_marginEnd="5sp"
                android:layout_marginBottom="15sp"
                android:layout_marginTop="10dp"
                android:clickable="false"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/NBCareDetail"
                    android:layout_width="0sp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5sp"
                    android:layout_marginTop="2sp"
                    android:layout_weight="1"
                    android:background="@drawable/style_not_done_square_shape"
                    android:text="Delivery Care"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/ANC"
                    android:layout_width="0sp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5sp"
                    android:layout_marginTop="2sp"
                    android:layout_weight="1"
                    android:background="@drawable/style_not_done_square_shape"
                    android:text="Mother ANC"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/PNC"
                    android:layout_width="0sp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5sp"
                    android:layout_marginTop="2sp"
                    android:layout_weight="1"
                    android:background="@drawable/style_not_done_square_shape"
                    android:text="Mother PNC"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    android:textSize="14sp" />



            </LinearLayout>
        </LinearLayout>


    </androidx.cardview.widget.CardView>
</LinearLayout>